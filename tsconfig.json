{
  "compilerOptions": {
    /* === Structure du projet === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Environnement === */
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node"],

    /* === Vérifications === */
    "strict": true,
    "skipLibCheck": true,

    /* === Génération des fichiers === */
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src"]
}
